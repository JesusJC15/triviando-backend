{
	"compilerOptions": {
		"target": "ES2020",
		"module": "Node16",
		"lib": ["ES2020"],
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node16",
		"types": ["node", "jest"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}

